<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_weight="1">
    <TextView  android:id="@+id/textView1"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:text="@string/timer1"
		android:paddingTop="5dp"
		android:paddingBottom="5dp"
		android:textSize="17dp" />
	<Spinner android:id="@+id/spinner1"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@id/textView1"
		android:paddingTop="5dp"
		android:paddingBottom="5dp"
		android:prompt="@string/interval_prompt" />

	<TextView  android:id="@+id/textView2"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:text="@string/timer2"
		android:layout_below="@id/textView1"
		android:paddingTop="5dp"
		android:paddingBottom="5dp"
		android:textSize="17dp" />
	<Spinner android:id="@+id/spinner2"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@id/textView2"
		android:paddingTop="5dp"
		android:paddingBottom="5dp"
		android:layout_below="@id/textView1"
		android:prompt="@string/interval_prompt" />
	<TextView  android:id="@+id/textView3"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:text="@string/timer3"
		android:layout_toRightOf="@id/spinner2"
		android:paddingTop="5dp"
		android:paddingBottom="5dp"
		android:layout_below="@id/textView1"
		android:textSize="17dp" />

	<TextView  android:id="@+id/textView4"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:text="@string/timer4"
		android:layout_below="@id/textView2"
		android:paddingTop="5dp"
		android:paddingBottom="5dp"
		android:textSize="17dp" />
	<Spinner android:id="@+id/spinner3"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/textView3"
		android:layout_toRightOf="@id/textView4"
		android:paddingTop="5dp"
		android:paddingBottom="5dp"
		android:prompt="@string/interval_prompt" />
	<TextView  android:id="@+id/textView5"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:text="@string/timer5"
		android:layout_below="@id/textView2"
		android:layout_toRightOf="@id/spinner3"
		android:paddingTop="5dp"
		android:paddingBottom="5dp"
		android:textSize="17dp" />
	</RelativeLayout>

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        style="@android:style/ButtonBar">
        <Button android:id="@+id/start_button"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Start" />
    </LinearLayout>

</LinearLayout>